{% extends "back_office/base.html.twig" %}
{% block title %}Modification du profil d'un utilisateur{% endblock %}
{% block body %}
    <div class="content-header">
        <div class="container-fluid">
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-3"></div>
                <div class="col-6">
                    <div class="card bg-light">
                        <div class="card-header bg-dark">
                            <h2 class="alert-heading text-center">Modification</h2>
                        </div>
                        <div class="card-body">
                            {{ form_row(form.firstName) }}
                            {{ form_row(form.lastName) }}
                            {{ form_row(form.email) }}
                            {{ form_row(form.roles) }}
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="green-icon btn btn-primary mr-3">
                                <i class="fa fa-check"></i>
                                Modifier
                            </button>
                            <a href="{{ path("admin_user_index") }}" class="btn btn-secondary">
                                <span class="fa fa-arrow-left"></span>
                                Retour
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-3"></div>
            </div>
            {{ form_end(form)}}
        </div>
    </section>
{% endblock %}