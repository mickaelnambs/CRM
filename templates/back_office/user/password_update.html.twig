{% extends 'back_office/base.html.twig' %}
{% block title %}Modification du mot de passe
{% endblock %}
{% block body %}
    <div class="content-header">
        <div class="container-fluid">
        </div>
    </div>
    {{ form_start(form) }}
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-3"></div>
                <div class="col-6">
                    <div class="card bg-light">
                        <div class="card-header bg-dark">
                            <h2 class="alert-heading text-center">Modifier votre mot de passe</h2>
                        </div>
                        <div class="card-body">
                            {{ form_row(form.currentPassword) }}
                            {{ form_row(form.newPassword) }}
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary mr-3">
                                <i class="fa fa-save"></i>
                                Modifier
                            </button>
                            <a href="{{ path("admin_user_index") }}" class="btn btn-secondary">
                                <span class="fa fa-arrow-left"></span>
                                Retour
                            </a>
                        </div>
                    </div>
                    <div class="col-3"></div>
                </div>
            </div>
        </div>
    </section>
    {{ form_end(form) }}
{% endblock %}