{% extends 'back_office/base.html.twig' %}
{% block title %}Tableau de board{% endblock %}
{% block body %}
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col">
                <div class="card bg-primary text-white text-center mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <a class="text-white" href="{{ path("admin_user_index")}}">
                                    <span class="fa fa-user fa-3x"></span>
                                </a>
                            </div>
                            <div class="col-8">
                                <a href="{{ path("admin_user_index") }}" class="text-white">
                                    <h4 class="card-title">{{users}} utilisateurs</h4>
                                </a>
                            </div>
                        </div>
                    </div>      
                </div>
            </div>
            <div class="col">
                <div class="card bg-secondary text-white text-center mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <a href="{{ path("admin_customer_index") }}" class="text-white">
                                    <span class="fa fa-users fa-3x"></span>
                                </a>
                            </div>
                            <div class="col-8">
                                <a href="{{ path("admin_customer_index") }}" class="text-white">
                                    <h4 class="card-title">{{customers}} Clients</h4>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-info text-white text-center mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <a href="{{ path("admin_invoice_index") }}" class="text-white">
                                    <span class="fa fa-file-invoice fa-3x"></span>
                                </a>
                            </div>
                            <div class="col-8">
                                <a href="{{ path("admin_invoice_index") }}" class="text-white">
                                    <h4 class="card-title">{{invoices}} Factures</h4>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}